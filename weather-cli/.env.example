# Conseguir API key en: https://openweathermap.org/api
OPENWEATHER_API_KEY=tu_api_key_aqui
OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5/weather

# Configuración del CLI
WEATHER_CLI_DEFAULT_UNITS=metric
WEATHER_CLI_TIMEOUT=5000

# MongoDB (opcional - para persistir historial)
# Poner MONGO_ENABLED=true para activar
MONGO_ENABLED=false

# Opción 1: URL completa (sin incluir nombre de BD)
MONGO_URL=mongodb://tu_usuario:tu_password@localhost:27017
MONGO_DB_NAME=WEATHER-CLI

# Opción 2: Variables individuales (alternativa a MONGO_URL)
# MONGO_HOST=localhost
# MONGO_PORT=27017
# MONGO_USER=tu_usuario
# MONGO_PASS=tu_password
# MONGO_DB_NAME=WEATHER-CLI
# MONGO_POOL_SIZE=10
# MONGO_TIMEOUT=5000

# Logging
LOG_LEVEL=info
LOG_FILE=weather-cli.log
